

%h2 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description:

%p#description= @movie.description

= link_to 'Edit', edit_movie_path(@movie)
= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Find Movies With Same Director' , director_path(:id=>@movie.id) #{}"#{@movie.id}/director"
%br
= link_to 'Back to movie list', movies_path
%br
%h3 Movies from #{@movie.director}
%ul#dMoviesWithSameDirector:
- @director_movies.each do |movie|
  %li
    = movie.title